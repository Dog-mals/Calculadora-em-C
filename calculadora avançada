	scanf("%f", &x);
	printf("Digite o segundo número: ");
	scanf("%f", &y);
	resultado = x + y;
	printf("\n\t\t\t%.4f + %.4f = %.6f", x, y, resultado);
   // Fim adição
   
   }else{
   	
   	   //Subtração
	   if(modulo == 2){
	   		printf("\n\t\t\t\t\t\tSubtração");
