   			printf("\n\t\t\t\t\t\tDivisão");
	printf("\nDigite o primeiro número: ");
	scanf("%f", &x);
	printf("Digite o segundo número: ");
	scanf("%f", &y);
	printf("Digite o terceiro número: ");
	scanf("%f", &z);
   	resultado = x / y / z;
   		printf("\n\t\t\t\t%.4f/%.4f/%.4f = %.6f", x, y, z, resultado);
   //Fim divisão
   
 }else{
 	
 	//Multiplicação
 	if(modulo == 4){
 		printf("\n\t\t\t\t\t\tMultiplicação");
	printf("\nDigite o primeiro número: ");
	scanf("%f", &x);
	printf("Digite o segundo número: ");
	scanf("%f", &y);
	printf("Digite o terceiro número: ");
	scanf("%f", &z);
	resultado = x * y * z;
	printf("\n\t\t\t\t%.4f * %.4f * %.4f = %.6f", x, y, z, resultado);
