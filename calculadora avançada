	scanf("%f", &x);
	printf("Digite o segundo número: ");
	scanf("%f", &y);
		printf("Digite o terceiro número: ");
	scanf("%f", &z);
	resultado = x + y + z;
	printf("\n\t\t\t%.4f + %.4f + %.4f = %.6f", x, y, z, resultado);
   // Fim adição
   
